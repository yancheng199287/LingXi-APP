<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout
        android:id="@+id/login_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        
        android:background="@drawable/bohaopan_line"
        android:padding="15dip" >

        <TextView
            android:id="@+id/gfk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="灵犀官方充值卡"
            android:textColor="#7A67EE"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/zfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gfk"
            android:layout_marginTop="30dp"
            android:text="卡号:"
            android:textColor="#7A67EE"
            android:textSize="22dp" />
        
      
        
        
        
        
        
        
        

        <TextView
            android:id="@+id/cw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/zfb"
            android:layout_marginTop="36dp"
            android:text="卡密:"
            android:textColor="#7A67EE"
            android:textSize="22dp" />
        
        <View
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@+id/gfk"
            android:layout_alignRight="@+id/gfk"
            android:layout_below="@+id/gfk"
            android:layout_marginTop="15dp"
            android:background="@color/black" />

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@+id/zfb"
            android:layout_below="@+id/zfb"
            android:layout_marginTop="17dp"
          android:background="@color/blue" />

        <ImageView
            android:id="@+id/ImageView02"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/cw"
            android:layout_marginTop="16dp"
         android:background="@color/blue" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/zfb"
            android:layout_alignBottom="@+id/zfb"
            android:layout_toRightOf="@+id/zfb"
            android:ems="10"
            android:hint="输入卡号:" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cw"
            android:layout_alignBottom="@+id/cw"
            android:layout_alignLeft="@+id/editText1"
            android:ems="10"
            android:hint="输入卡密:" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cw"
            android:layout_alignRight="@+id/ImageView02"
            android:layout_below="@+id/ImageView02"
            android:layout_marginTop="17dp"
            android:background="@color/hui"
            android:text="点击充值" />

    </RelativeLayout>

</RelativeLayout>