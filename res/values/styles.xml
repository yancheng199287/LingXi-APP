<resources xmlns:android="http://schemas.android.com/apk/res/android">

    
    
        <!-- 主界面八个图标的样式 -->

    <style name="bohaopan">
    
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@drawable/bohaopan_line</item>
    </style>
    
    
    
    
    
    
    
    
    
    
    
    
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 导航栏下面的整体边界 -->
    <style name="parentMargin">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <!-- 底部菜单样式 -->
    <style name="main_tab_bottom">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@drawable/textstate</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <!-- 联系人四大按钮样式 -->

    <style name="contact_four">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5sp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>
    
    
    <style name="friendgroups">
         <item name="android:textSize">8sp</item>
        <item name="android:layout_marginTop">5dp</item>
         <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>